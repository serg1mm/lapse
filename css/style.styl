*
  margin: 0
  padding: 0

html
  font-family: sans-serif
  background: red

.overlay
  position: fixed
  width: 100vw
  height: 100vh
  background: rgba(black, 40%)

.menu
  position: fixed
  z-index: 999
  height: 100vh
  width: 15vw
  left: 0
  top: 0
  overflow: hidden
  .menu-svg
    position: absolute
  &.open, &.touch
    width: 80vw
    opacity: 1
  .menu-inner
    position: absolute
    z-index: 1
    transform: translateX(-100%)
    transition: all .25s ease
    nav
      padding: 30px
      a
        display: block
        margin-bottom: 10px
  &.open
    .menu-inner
      transform: translateX(0)
